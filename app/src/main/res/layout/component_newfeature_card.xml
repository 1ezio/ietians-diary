<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="254dp"
        android:minWidth="330dp"
        android:maxWidth="350dp"
        android:paddingVertical="26dp"
        android:paddingHorizontal="33dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/feature_discussionform_bg_blue">

        <TextView
            android:id="@+id/tvDiscussionForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Discussion Forum"
            android:textSize="22sp"
            android:fontFamily="@font/poppins_medium"/>

        <ImageView
            android:id="@+id/ivMessageIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/tvDiscussionForm"
            app:layout_constraintBottom_toBottomOf="@id/tvDiscussionForm"
            app:layout_constraintStart_toEndOf="@+id/tvDiscussionForm"
            android:src="@drawable/ic_messages"/>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvDiscussionForm"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/discussion_form_description"
            android:textSize="16sp"
            android:fontFamily="@font/poppins"/>

        <TextView
            android:id="@+id/tvIntervive"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:background="@drawable/feature_discussionform_textview_bg"
            app:layout_constraintTop_toBottomOf="@id/tvDescription"
            app:layout_constraintStart_toStartOf="parent"
            android:text="interviews"
            android:textSize="11sp"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/tvExams"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginStart="7dp"
            android:gravity="center"
            android:background="@drawable/feature_discussionform_textview_bg"
            app:layout_constraintTop_toTopOf="@id/tvIntervive"
            app:layout_constraintBottom_toBottomOf="@id/tvIntervive"
            app:layout_constraintStart_toEndOf="@id/tvIntervive"
            android:text="exams"
            android:textSize="11sp"
            android:textAllCaps="false"/>

        <RelativeLayout
            android:id="@+id/rlCircluarimage1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:background="@drawable/feature_circularimage_bg"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <androidx.cardview.widget.CardView
                android:id="@+id/myCardView1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:cardCornerRadius="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/roundedImage1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@raw/profile_image_1"/>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlCircluarimage2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="15dp"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:background="@drawable/feature_circularimage_bg"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <androidx.cardview.widget.CardView
                android:id="@+id/myCardView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:cardCornerRadius="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/roundedImage2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@raw/profile_image_2"/>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlCircluarimage3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="30dp"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:background="@drawable/feature_circularimage_bg"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <androidx.cardview.widget.CardView
                android:id="@+id/myCardView3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:cardCornerRadius="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/roundedImage3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@raw/profile_image_3"/>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlCircluarimage4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="45dp"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:background="@drawable/feature_circularimage_bg"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <androidx.cardview.widget.CardView
                android:id="@+id/myCardView4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:cardCornerRadius="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/roundedImage4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@raw/profile_image_4"/>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/rlCircluarimage4"
            app:layout_constraintBottom_toBottomOf="@+id/rlCircluarimage4"
            app:layout_constraintStart_toStartOf="@+id/rlCircluarimage4"
            app:layout_constraintEnd_toEndOf="@+id/rlCircluarimage4"
            android:text="+60"
            android:textSize="8sp"
            android:textColor="@color/white"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Join Now"
            android:textSize="11sp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/feature_discussionform_button_bg"
            app:backgroundTint="@null"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>